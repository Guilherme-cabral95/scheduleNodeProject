<% if(success.length > 0){ %>
    <div class="alert alert-success fade show" role="alert">
        <div class="container">      
            <div class="row">
                <div class="col-11">
                    <%=success%>
                </div>
                <div class="col-1">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>    
            </div>
        </div>
    </div>
<%}%>    


<% if(errors.length > 0){ %>
    <div class="alert alert-danger fade show" role="alert">
        <div class="container">
            <div class="row">
                <div class="col-11">
                    <ul>
                        <%errors.forEach(element => {%>
                            <li><%= element%> </li>    
                        <%});%>
                        </ul>
                </div>
                <div class="col-1">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            </div>
           
        </div>
    </div>
<%}%>    